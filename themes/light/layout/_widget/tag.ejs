<% if (site.tags.length){ %>
<div class="widget tagcloud">
  <h3 class="title"><%= __('tags') %></h3>
  <ul class="entry clearfix">
  <% site.tags.sort('name').each(function(item){ %>
    <li><a href="<%- config.root %><%- item.path %>"><%= item.name %><sup><%= item.posts.length %></sup></a></li>
  <% }); %>
  </ul>
</div>
<% } %>
