#pagination
  a
    display block
    padding 5px 10px
    background white
    color color-meta
    font-family font-title
    text-shadow 0 0 1px #fff
    margin-bottom 50px
    &:hover
      background color-link
      color #fff
      text-decoration none
      text-shadow none

  .prev
    &:before
      content '\f053'
      padding-right 10px
      font-family font-icon

  .next
    &:after
      content '\f054'
      padding-left 10px
      font-family font-icon

.border
  background url("/img/dots.png") repeat
  height 5px
  margin 30px 0px !important

#top
  width 35px
  position fixed
  left 50%
  bottom 100px
  padding 0
  height auto
  margin 0
  cursor pointer
  z-index 99999999
  opacity .6
  display none

#top:hover
  opacity 1
