.comment
  clear both
  p.title
    font-size 22px
    line-height 2em
    position relative
    color #333
  .ico-comment:before
    content "\f086"
    position absolute
    left -54px
    font 32px FontAwesome
    color #333
    top 10px
  @media screen and (max-width: 600px)
    .ico-comment:before
      content ""
      width 0
      height 0
      font-size 0
      line-height 0

