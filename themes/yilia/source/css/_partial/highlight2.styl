
.article-entry
  pre, code
    font-family: Menlo, Monaco, "Andale Mono", "lucida console", "Courier New", monospace
    text-shadow: none
  code
    background: #f8f8f8
    padding: 0 0.3em
    border: none
  pre
    // color: code-word
    background: #f8f8f8
    -webkit-border-radius: 4px
    -moz-border-radius: 4px
    -ms-border-radius: 4px
    -o-border-radius: 4px
    border-radius: 4px
    border: 0 none;
    padding: 5px;

    >code.hljs
      position: relative;
      padding-left: 35px

      ul.hljs-line-number
        list-style: none;
        padding: 0em 0.5em 0em 0.5em;
        margin: 0 5px 0 0;
        line-height: 1.5;
        border-right: 1px solid #66A596;
        background-color: #f8f8f8;
        color: #B5B0B0;
        text-align: right;
        position: absolute;
        left: 0;
        :before
          content:''
          display:none
  // pre:hover
      // border: 1px solid #444
    code
      background: none
      text-shadow: none
      padding: 0

    code.bash:after,
    code.css:after,
    code.shell:after,
    code.html:after,
    code.php:after,
    code.js:after,
    code.javascript:after
      position: absolute
      top: 0
      right: 0
      text-align: right
      color: #ccc
      font-weight: 600
      font-size: 120%

    code.css:after
      content: 'CSS'

    code.js:after,
    code.javascript:after
      content: 'JS'

    code.bash:after,
    code.shell:after
      content: 'Shell'

    code.html:after
      content: 'HTML'

    code.php:after
      content: 'PHP'
